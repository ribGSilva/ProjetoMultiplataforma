<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.ribeiro.gabriel.compras.application.fragments.HomeFragment">

    <TextView
            android:layout_margin="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:text="Compras em Kotlin"/>

    <TextView
            android:layout_margin="30dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App de compras de itens feito para estudar kotlin e aprender um pouco mais sobre seus recursos."/>

    <TextView
            android:textSize="16sp"
            android:layout_margin="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nois q voa! E vida q segue!"/>

</LinearLayout>
